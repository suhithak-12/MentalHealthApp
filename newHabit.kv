<newHabit>:
    name: "habit"
    MDFloatLayout:
        md_bg_color: 231/255, 231/255, 231/255, 1
    MDLabel:
        text: "New Habit!"
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}
        font_size: "75"
        halign: "center"
        font_name: "kr"
    
    MDFloatLayout:
        size_hint: .85, .08
        pos_hint: {"center_x": 0.5, "center_y": 0.85}
        canvas:
            Color:
                rgba: 245/255, 245/255, 245/255, 0.4
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id: habitName
            hint_text: "Habit Name"
            pos_hint : {"center_x":0.5, "center_y":0.5}
            size_hint: 1, None
            multiline: False
            font_name: "kr"
            font_size: "60"
            height: self.minimum_height
            cursor_color: 233/255, 203/255, 55/255, 1
            cursor_width: "2sp"
            foreground_color: 221/255, 133/255, 111/255, 1
            background_color: 0, 0, 0, 0
            padding: 15

    MDFloatLayout:
        size_hint: .85, .08
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
        canvas:
            Color:
                rgba: 245/255, 245/255, 245/255, 0.4
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id:startDate
            hint_text: "Start Date"
            pos_hint : {"center_x":0.5, "center_y":0.5}
            size_hint: 1, None
            multiline: False
            font_name: "kr"
            font_size: "60"
            height: self.minimum_height
            cursor_color: 233/255, 203/255, 55/255, 1
            cursor_width: "2sp"
            foreground_color: 221/255, 133/255, 111/255, 1
            background_color: 0, 0, 0, 0
            padding: 15

    Button:
        id: frequency
        text: "Select Frequency"
        font_name: "kr"
        font_size: "40"
        size_hint: .5, .08
        background_color: 0, 0, 0, 0
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        canvas.before:
            Color:
                rgb: 221/255, 133/255, 111/255, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [23]
        on_release: root.dropdown1()

    MDFloatLayout:
        size_hint: .85, .08
        pos_hint: {"center_x": 0.5, "center_y": 0.55}
        canvas:
            Color:
                rgba: 245/255, 245/255, 245/255, 0.4
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id: timeRemind
            hint_text: "Time Reminder"
            pos_hint : {"center_x":0.5, "center_y":0.5}
            size_hint: None, None
            size: "300dp", "100dp"
            font_name: "kr"
            font_size: "60"
            height: self.minimum_height
            cursor_color: 233/255, 203/255, 55/255, 1
            cursor_width: "2sp"
            foreground_color: 221/255, 133/255, 111/255, 1
            background_color: 0, 0, 0, 0
            padding: 15

    Button:
        id: AmPm
        text: "Select AM Or PM"
        font_name: "kr"
        font_size: "40"
        size_hint: .5, .08
        background_color: 0, 0, 0, 0
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        canvas.before:
            Color:
                rgb: 221/255, 133/255, 111/255, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [23]
        on_release: root.dropdown2()
    
    MDFloatLayout:
        size_hint: .85, .08
        pos_hint: {"center_x": 0.5, "center_y": 0.35}
        canvas:
            Color:
                rgba: 245/255, 245/255, 245/255, 0.4
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        TextInput:
            id: Notes
            hint_text: "Notes"
            pos_hint : {"center_x":0.5, "center_y":0.5}
            size_hint: None, None
            size: "300dp", "100dp"
            font_name: "kr"
            font_size: "60"
            height: self.minimum_height
            cursor_color: 233/255, 203/255, 55/255, 1
            cursor_width: "2sp"
            foreground_color: 221/255, 133/255, 111/255, 1
            background_color: 0, 0, 0, 0
            padding: 15
    Button:
        text: "Submit"
        font_name: "kr"
        font_size: "40"
        size_hint: .5, .08
        pos_hint: {"center_x": .5, "center_y": .15}
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgb: 221/255, 133/255, 111/255, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [23]
        on_release: root.createHabit()
    Button:
        text: "GO HOME"
        font_name: "kr"
        font_size: "40"
        size_hint: .5, .08
        pos_hint: {"center_x": .5, "center_y": .05}
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgb: 221/255, 133/255, 111/255, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [23]
        on_release: app.root.current = "home"
        
