<resourcePage>:
    name: "resources"
    MDFloatLayout:
        md_bg_color: 231/255, 231/255, 231/255, 1
    MDLabel:
        text: "Resource Page!"
        font_style: "H1"
        font_name: "kr"
        halign: "center"
        pos_hint: {"center_y": 0.90}

    
    MDFloatLayout:
        md_bg_color: 1, 0.8, 0.9, 1  # Light pink background
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.9, 0.7

        MDLabel:
            text: "988 Suicide and Crisis lifeline"
            font_name: "lemon"
            font_size: "20sp"
            pos_hint: {"x": 0.1, "top": 1.4}

        MDLabel:
            text: "https://988lifeline.org/"
            font_name: "lemon"
            font_size: "10sp"
            pos_hint: {"x": 0.1, "top": 1.3}

        MDLabel:
            text: "Al-Anon"
            font_name: "lemon"
            font_size: "20sp"
            pos_hint: {"x": 0.1, "top": 1.2}

        MDLabel:
            text: "https://aisnm.org/index.html"
            font_name: "lemon"
            font_size: "10sp"
            pos_hint: {"x": 0.1, "top": 1.15}

        MDLabel:
            text: "Nami New Mexico"
            font_name: "lemon"
            font_size: "17sp"
            pos_hint: {"x": 0.1, "top": 1.05}

        MDLabel:
            text: "https://naminewmexico.org/"
            font_name: "lemon"
            font_size: "10sp"
            pos_hint: {"x": 0.1, "top": 1}

        MDLabel:
            text: "Patients Engage"
            font_name: "lemon"
            font_size: "20sp"
            pos_hint: {"x": 0.1, "top": 0.90}

        MDLabel:
            text: "https://www.patientsengage.com/"
            font_name: "lemon"
            font_size: "10sp"
            pos_hint: {"x": 0.1, "top": 0.85}

        MDLabel:
            text: "Hands together"
            font_name: "lemon"
            font_size: "20sp"
            pos_hint: {"x": 0.1, "top": 0.75}

        MDLabel:
            text: "http://headstogether.org.uk/"
            font_name: "lemon"
            font_size: "10sp"
            pos_hint: {"x": 0.1, "top": 0.70}
    Button:
        text: "GO HOME"
        font_name: "kr"
        font_size: "40"
        size_hint: .5, .08
        pos_hint: {"center_x": .5, "center_y": .1}
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgb: 221/255, 133/255, 111/255, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [23]
        on_release: app.root.current = "home"

   
