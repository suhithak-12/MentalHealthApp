<HomeScreen>:
    name: "home"
    MDBoxLayout:
        md_bg_color: 231/255, 231/255, 231/255, 1
        orientation: "horizontal"

        # Main Content (Left Side)
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.9, 1  # Take 90% of the screen width
            padding: "20dp"
            
            MDLabel:
                text: " Welcome!"
                font_style: "H1"
                font_name: "kr"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]  # Adjust height to fit text
                pos_hint: {"top": 1}  # Push to the top

            MDBoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(80)
                    padding: dp(20)
                BoxLayout:
                    size_hint_y: None
                    height: dp(550)  # Adjust height to control positioning
                    width: dp(1000)
                    pos_hint: {"top": 1}  # Moves it up
                    AsyncImage:
                        source: "animations/neutralpenguin.gif"
                        anim_delay: 0.1
                        allow_stretch: True
                        keep_ratio: True
                      
                       

        # Right Navigation Bar (with One Button at the Top)
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.1, 1  # 10% width, full height
            padding: "10dp"
            spacing: "20dp"  # Add spacing between button and bottom bar

            canvas.before:
                Color:
                    rgb: 231/255, 231/255, 231/255, 1  # Background color of navbar
                Rectangle:
                    size: self.size
                    pos: self.pos

           

    # Bottom Navigation Bar
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, None  # Full width, fixed height
        height: "50dp"  # Adjust height of bottom navbar
        padding: "10dp"
        spacing: "30dp"

        canvas.before:
            Color:
                rgb: 231/255, 231/255, 231/255, 1  # Background color of bottom navbar
            Rectangle:
                size: self.size
                pos: self.pos

        MDRectangleFlatButton:
            text: "Interact"
            size_hint_x: None
            width: "150dp"
            md_bg_color: 221/255, 133/255, 111/255, 1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            focus: False
            on_release: app.root.current = "petInteract"
            

        MDRectangleFlatButton:
            text: "Resources"
            size_hint_x: None
            width: "150dp"
            md_bg_color: 221/255, 133/255, 111/255, 1 
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            focus: False
            on_release: app.root.current = "resources"

        MDRectangleFlatButton:
            text: "New Habit"
            size_hint_x: None
            width: "150dp"
            md_bg_color: 221/255, 133/255, 111/255, 1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            background_normal: ""  # No background image when idle
            background_down: ""
            focus: False
            elevation: 0
            on_release: app.root.current = "habit"
